<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".HighScoresActivity">

    <TextView
        android:id="@+id/tv_results_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quiz_results"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_current_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="italic"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_results_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="17 respuestas, 58.82% correctas" />

    <TextView
        android:id="@+id/tv_mode_selector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="?attr/colorPrimaryContainer"
        android:textColor="?attr/colorOnPrimaryContainer"
        android:text="@string/records_display_mode"
        app:layout_constraintTop_toBottomOf="@+id/tv_current_score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:focusable="true"
        tools:text="Modo de Juego (FLAG_QUIZ)" />

    <TextView
        android:id="@+id/tv_difficulty_selector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="?attr/colorPrimaryContainer"
        android:textColor="?attr/colorOnPrimaryContainer"
        android:text="@string/record_display_difficulty"
        app:layout_constraintTop_toBottomOf="@+id/tv_mode_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:focusable="true"
        tools:text="Dificultad (PATRIOT)" />

    <TextView
        android:id="@+id/tv_record_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/record_label"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_difficulty_selector"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_max_score_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/tv_record_label"
        app:layout_constraintBottom_toBottomOf="@+id/tv_record_label"
        app:layout_constraintStart_toEndOf="@+id/tv_record_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="end"
        tools:text="10/10 en 01:30 por MHS" />

    <TextView
        android:id="@+id/tv_top5_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/top_5_scores"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_max_score_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_high_score_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="14sp"
        android:scrollbars="vertical"
        android:layout_marginTop="4dp"
        android:fontFamily="monospace"
        app:layout_constraintTop_toBottomOf="@+id/tv_top5_label"
        app:layout_constraintBottom_toTopOf="@+id/btn_restart_app"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="1. User - 10/10 (01:30)" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_restart_app"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/restart_app"
        android:paddingVertical="12dp"
        android:layout_marginBottom="16dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>